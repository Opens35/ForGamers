<h1>Listing Articles</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>

  <% @blogs.each do |blog| %>
    <tr>
      <td><%= blog.title %></td>
      <td><%= blog.review %></td>
      <td><%= link_to 'Show', admin_blog_path(blog) %></td>
      <td><%= link_to 'Edit', edit_admin_blog_path(blog) %></td>
      <td><%= link_to 'Destroy', admin_blog_path(blog),
          method: :delete,
          data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>