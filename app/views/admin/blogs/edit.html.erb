<h1>Edit Article</h1>
<%= form_with model: @blog, url: admin_blog_path, local:true do |f| %>
  <div class="validates">
    <% if @blog.errors.any? %>
      <%= @blog.errors.count %> 件の入力ミスがあります。
      <% @blog.errors.full_messages.each do |message| %><br>
        ・<%= message %>
      <% end %>
    <% end %>
  </div>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :review %><br>
    <%= f.text_area :review %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>