<div class ="container mt-4">
  <h1>PV数ランキング</h1>
  <div class="row row-cols-md-4 g-4">
    <% @pv_ranking.each do |blog| %>
      <div class="col mt-4">
        <div class="card h-100 text-center">
          <%= attachment_image_tag blog, :device_image, format: 'jpeg' %>
          <div class="card-body">
            <h5 class="card-title"><%=blog.title%></h5>
            <p class="card-text"><%= blog.review.truncate(20)%></p>
            <p>閲覧数:<%= blog.impressions_count%></p>
            <%= link_to "レビューを見る", blog_path(blog), class:"btn btn-primary"%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate @pv_ranking %>
</div>